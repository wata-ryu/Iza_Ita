<div class="container px-5 px-sm-0">
    <div class="d-flex row">
        <div class="col-md-6 mt-3 mx-auto">
            <h2 class="mt-5 mb-5 text-center">ジャンル編集</h2>
            <!--namespace を使用した時はデフォルトのurlじゃなくなる為url指定する必要がある-->
            <%= form_with model: @genre,url: admin_genre_path(@genre.id), method: :patch do |f| %>
               <div class="d-flex mb-5">
                    <div class="align-middle">ジャンル名</div>
                    <div class="align-middle ml-5 mr-5">
                        <%= f.text_field :name, autofocus: true, id:"inputName", class: 'form-control' %>
                    </div>
                    <%= f.submit '変更を保存', class: 'btn btn-success' %>
               </div>
            <% end %>
        </div>
    </div>
</div>