<div class="container px-5 px-sm-0">
    <div class="d-flex row">
        <div class="col-md-6 mt-3 mx-auto">
            <h2 class="mt-5 mb-5 text-center">ジャンル一覧・追加</h2>
            <%= form_with model: @genre, url: admin_genres_path do |f| %>
               <div class="d-flex mb-5">
                    <p class="align-middle">ジャンル名</p>
                    <p class="align-middle ml-5 mr-5"><%= f.text_field :name, autofocus: true, class: 'form-control' %></p>
                    <%= f.submit '新規登録', class: 'btn btn-success' %>
               </div>
            <% end %>
              
            <table class="table table-hover table-inverse">
               <thead class="bg-light">
                 <tr>
                  <th>ジャンル</th>
                  <th colspan="2"></th>
                 </tr>
               </thead>
               <tbody>
                 <% @genres.each do |genre| %>
                  <tr>
                    <td><%= genre.name %></td>
                    <td>
                      <button class="btn btn-sm btn-success">
                        <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'nav-link text-white' %>
                      </button>
                    </td>
                  </tr>
                 <% end %>
               </tbody>
            </table>
        </div>
    </div>
</div>