<div class="container px-5 px-sm-0">
<h2 class="mt-3 mb-3 text-center">会員一覧</h2>
    <div class="row">
        <div class="col-md-10 mx-auto mt-5">
            <table class="table table-hover">
               <thead class="bg-light">
                 <tr>
                  <th>会員ID</th>
                  <th>ニックネーム</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
                 </tr>
               </thead>
               <tbody>
                 <% @users.each do |user| %>
                  <tr>
                    <td><%= user.id %></td>
                    <td>
                      <%= link_to user.name, admin_user_path(user.id) %>
                    </td>
                    <td><%= user.email %></td>
                    <% if user.is_deleted == false %>
                    <td class="text-success">有効</td>
                    <%  else %>
                    <td class="text-secondary">退会</td>
                    <% end %>
                  </tr>
                 <% end %>
               </tbody>
            </table>
        </div>
        <!--kaminariでのページネーション-->
        <div class="text-center">
          <h5 class="mt-5"><%= paginate @users %></h5>
        </div>
    </div>
</div>