<div class="container px-3 px-sm-0">
<!--それぞれに対応したトップ表示-->
<% if @genre %>
  <h2 class="posts-title text-center mt-3 mb-3 border-bottom"><%= @genre.name %>関連の投稿</h2>
<% else %>
  <h2 class="posts-title text-center mt-3 mb-3 border-bottom">投稿一覧</h2>
<% end %>

<!--ジャンル検索機能-->
<%= form_tag admin_posts_path, method: :get, class: 'boards_searchForm' do %>
    <div class="row mt-5 mb-5">
      <% @genres.each do |genre| %>
        <div class="tag-box mx-auto">
          <h5 class="genre-name"><%= link_to genre.name, admin_posts_path(name: genre.id) %></h5>
        </div>
      <% end %>
    </div>
    <!--投稿一覧,render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] -->
    <%= render 'list', posts: @posts %>
<% end %>
</div>