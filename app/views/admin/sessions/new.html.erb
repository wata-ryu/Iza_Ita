<div class="container px-2 px-sm-0">
    <div class="row">
        <div class="col-md-6 col-12 mt-5 mx-auto">
            <h2 class="admin-title mb-5 text-center text-danger">管理者ログイン</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <table class="table table-borderless table-inverse">
              <tbody>
                <tr>
                  <td style='width:35%'>アドレス</td>
                  <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></td>
                </tr>
              　<tr>
                  <td>パスワード</td>
                  <td><%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %></td>
                </tr>
            　   <tr>
                  <td>
                    <% if devise_mapping.rememberable? %>
                      <div class="field text-align-center">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end %>
                  </td>
                  <td><%= f.submit "ログイン", class: 'btn btn-success btn', style: 'width:100px' %></td>
                </tr>
              </tbody>
            </table>
            <% end %>
        </div>
        <%= render "admin/shared/links" %>
    </div>
</div>