<!--userごとのお気に入り一覧-->
<div class="container px-5 px-lg-0">
    <div class="row border-top">
    　<div class="col-md-10 mx-auto">
    　<h2 class="mt-3 mb-3 text-center"><%= @user.name %>のお気に入り一覧</h2>
      <% if @bookmark_list.present? %>
        <% @bookmark_list.each do |post| %>
          <div class="border-top">
            　<table class="table table-borderless">
                <tbody>
                  <tr>
                    <td style="width: 30%">
                      <!--userごとのプロフィール画像を取得-->
                      <%= link_to public_user_path(post.user.id) do %>
                      <p class="text-center">
                        <%= image_tag post.user.get_profile_image(100,100), class: 'rounded-circle' %>
                      </p>
                      <% end %><br>
                      <p class="text-center"><%= post.user.name %></p>
                    </td>
                    <td class="text-center" style="width: 30%"><%= image_tag post.image, size: "160x160" %></td>
                    <!--取得したtitle名をリンクにしてbook詳細画面へ移行-->
                    <td style="width: 40%">
                        <h3><%= link_to post.title, public_post_path(post),class: 'text-dark' %></h3><br>
                        <% post.genres.each do |genre| %>
                        #　<%= genre.name %><br>
                        <% end %>
                        <br>
                        #　<%= post.alcohol %>に相性抜群！<br>
                        <br>
                        #　<%= truncate(post.summary, length: 20) %>
                    </td>
                    <td></td>
                  </tr>
                  <tr>
                    <td></td>
                    <td class="text-center">♥ <%= post.bookmarks.count %>　コメント <%= post.comments.count %></td>
                    <td><%= post.created_at.to_s(:datetime_jp) %></td>
                  </tr>
                </tbody>
              </table>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
</div>