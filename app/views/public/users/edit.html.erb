<div class="container px-5 px-sm-0">
    <h2 class="mt-5 mb-5 text-center">マイページ編集</h2>
    <div class="row d-flex mb-5">
        
        
        <div class="col-md-3 mx-auto">
        <%= form_with model: @user, url: public_user_path(current_user.id) do |f| %>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="col-md-6 mx-auto">
            <table class="table table-borderless table-inverse">
              <tbody>
                <tr>
                  <td>ニックネーム</td>
                  <td><%= f.text_field :name, autofocus: true, id:"inputName", class: 'form-control' %></td>
                  <td><%= f.submit "更新する", class: 'btn btn-success' %></td>
                </tr>
                <tr>
                  <td>自己紹介</td>
                  <td><%= f.text_area :introduction, id:"inputIntroduction", class: 'form-control' %></td>
                </tr>
              </tbody>
            </table>
        <% end %>
        </div>
    </div>
</div>