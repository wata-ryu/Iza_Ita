<div class="main room-image">
  <div class="container px-5 px-lg-0">
      <h2 class="pt-5 mb-3 text-center"><%= @user.name %>の部屋</h2>
      <!--フラッシュメッセージの表示-->
      <p class="text-center text-success"><%= flash[:notice] %></p>
      
      <div class="row">
          <div class="col-md-10 mx-auto mt-3">
              <table class="table table-borderless">
                <tbody>
                  <tr>
                    <td style="width: 25%"><%= image_tag @user.get_profile_image(200,200), class: 'rounded-circle' %></td>
                    <td style="width: 25%px">
                      <h5>ニックネーム</h5>
                      <br>
                      <h5>自己紹介</h5>
                    </td>
                    <td style="width: 40%">
                      <h5><%= @user.name %></h5>
                      <br>
                      <h5><%= @user.introduction %></h5>
                    </td style="width: 10%">
                    <td>
                      <!--ログインユーザーのみ編集ボタンを表示-->
                      <% if @user == current_user %>
                        <%= link_to '編　集', edit_public_user_path, class: 'btn btn-sm btn-success nav-link text-white', style: 'width:110px' %>
                        <br>
                        <%= link_to 'お気に入り', public_user_users_favorite_path(@user), class: 'btn btn-sm btn-primary nav-link text-white', style: 'width:110px' %>
                      <% end %>
                    </td>
                  </tr>
                </tbody>
              </table>
          </div>
      </div>
      
      <div class="row border-top">
        <div class="col-md-10 mx-auto">
        <h2 class="mt-3 mb-3 text-center"><%= @user.name %>の投稿一覧</h2>
        <% @posts.each do |post| %>
            <div class="border-top">
              　<table class="table table-borderless">
                  <tbody>
                    <tr>
                      <td class="text-center" style="width: 60%"><%= image_tag post.image, size: "200x200" %></td>
                      <!--取得したtitle名をリンクにしてbook詳細画面へ移行-->
                      <td style="width: 40%">
                          <h3><%= link_to post.title, public_post_path(post),class: 'text-dark' %></h3><br>
                          <% post.genres.each do |genre| %>
                          #　<%= genre.name %><br>
                          <% end %>
                          <br>
                          #　<%= post.alcohol %>に相性抜群！<br>
                          <br>
                          #　<%= truncate(post.summary, length: 20) %>
                      </td>
                      <td></td>
                    </tr>
                    <tr>
                      <td><p class="text-center">♥ <%= post.bookmarks.count %>　コメント <%= post.comments.count %></p></td>
                      <td>
                        <%= post.created_at.to_s(:datetime_jp) %>
                      </td>
                      <td></td>
                    </tr>
                  </tbody>
                </table>
            </div>
        <% end %>    
        </div>
      </div>
  </div>
</div>