<div class="main-image">
  <div class="container px-2 px-sm-0">
      <div class="row mx-auto">
          <div class="col-md-6 col-12 mt-5 mx-auto">
              <h1 class="title mb-5 text-center text-light">ログイン</h1>
  
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <table class="table table-borderless">
                <tbody>
                  <tr>
                    <td><h5 class="details text-light">メールアドレス</h5></td>
                    <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></td>
                  </tr>
                　<tr>
                    <td><h5 class="details text-light">パスワード</h5></td>
                    <td><%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %></td>
                  </tr>
              　   <tr>
                    <td>
                      <% if devise_mapping.rememberable? %>
                        <p class="details field text-align-center text-light">
                          <%= f.check_box :remember_me %>
                          <%= f.label :ログイン情報を記憶する %>
                        </p>
                      <% end %>
                    </td>
                    <td><%= f.submit "ログイン", class: 'btn btn-success btn', style: 'width:100px' %></td>
                  </tr>
                </tbody>
              </table>
              <% end %>
              <h5 class="details mt-3 text-center text-light">会員登録がお済みでない方は<%= render "public/shared/links" %>から<br>新規登録を行ってください。</h5>
          </div>
      </div>
  </div>
</div>