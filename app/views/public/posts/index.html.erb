<div class="main index-image">
  <div class="container px-5 px-sm-0">
  <!--それぞれに対応したトップ表示-->
  <% if @genre %>
    <h1 class="pl-5 ml-5 text-dark pt-3 mb-3"><%= @genre.name %>のレシピ</h1>
  <% else %>
    <h1 class="posts-title pl-5 ml-5 text-dark pt-3 mb-3">レシピを探す</h1>
  <% end %>

  <!--ジャンル検索機能-->
  <%= form_tag public_posts_path, method: :get, class: 'boards_searchForm' do %>
    　<div class="row mt-5 pt-5 mb-2">
        <% @genres.each do |genre| %>
          <div class="tag-box mx-auto">
            <h5 class="mt-3 pt-5"><%= link_to genre.name, public_posts_path(name: genre.id), class: 'text-success' %></h5>
          </div>
        <% end %>
    　</div>

      <!--投稿一覧,render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] -->
      <%= render 'list', posts: @posts %>
  <% end %>
  </div>
</div>